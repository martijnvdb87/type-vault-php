<?xml version="1.0"?>
<ruleset name="TypeVault Coding Standards">
    <description>Enforces PSR-12 coding style</description>
    <!-- Base standard -->
    <rule ref="PSR12" />

    <!-- Disable strict PHPDoc rules -->
    <exclude name="Squiz.Commenting.FunctionComment" />
    <exclude name="Squiz.Commenting.FileComment" />
    <exclude name="Squiz.Commenting.VariableComment" />
    <exclude name="Squiz.Commenting.ClassComment" />

    <!-- Scan these folders -->
    <file>src</file>
    <file>tests</file>
    <arg name="colors" />
</ruleset>